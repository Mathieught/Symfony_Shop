{% extends 'base.html.twig' %}

{% block title %}{{'product.product'|trans}}{% endblock %}

{% block body %}
	<div class="container">
		<div>
			<h1 class="text-center text-dark m-5">{{'product.title'|trans}}</h1>
			{% if products is not empty %}
				<table class="table table-hover text-center">
					<thead class="thead-dark">
						<tr>
							<th scope="col">{{'product.picture'|trans}}</th>
							<th scope="col">{{'product.name'|trans}}</th>
							<th scope="col">{{'product.quantity'|trans}}</th>
							<th scope="col">{{'product.price'|trans}}</th>
						</tr>
					</thead>
					<tbody>
						{%  for product in products %}
							<tr>
								<td><img src="{{ asset('/uploads/'~ product.picture) }}"></td>
								<td>
									<a class="text-primary" href="{{ path('selected_product', {'id':product.id}) }}">{{ product.name }}</a>
								</td>
								<td>{{ product.quantity}}</td>
								<td>{{ product.price}}â‚¬</td>
							</tr>
						</td>
			{% endfor %}
				</tbody>
			</table>
		{% else %}
			<div
				class="alert alert-danger text-center">
				{{'product.noProduct'|trans}}
			</div>
		{% endif %}
		<br>
		<h4 class="text-center text-muted">{{'product.addProductTitle'|trans}}</h4>
		<div >{{form(form_add_product)}}</div>
		
		</div>
		<style>
		td{
			vertical-align: middle !important;
		}
		td img{
			width:150px ;
		}
		</style>
	{% endblock %}
